<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_top_bar"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shadow_top_bar">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/k_profile_title"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_profile_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ctl_top_bar">
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/bg_profile"
                android:backgroundTint="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_profile_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/k_nickname_tmp"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/iv_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_profile"
                app:layout_constraintTop_toBottomOf="@id/iv_profile"/>
            <TextView
                android:id="@+id/tv_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/k_profile_phone_num"
                android:textColor="@color/colorGray"
                android:textSize="12dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/iv_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_profile"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_nick_name"/>
            <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/k_profile_email"
                android:textColor="@color/colorGray"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/iv_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_profile"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_phone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_list_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ctl_profile_container"
            android:layout_marginTop="30dp">
            <View
                android:id="@+id/view_line_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_tab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/k_profile_tab_1"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_1"
                app:layout_constraintBottom_toTopOf="@id/view_line_2"/>
            <View
                android:id="@+id/view_line_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_1"
                app:layout_constraintBottom_toTopOf="@id/tv_tab_2"/>
            <TextView
                android:id="@+id/tv_tab_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/k_profile_tab_2"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_2"
                app:layout_constraintBottom_toTopOf="@id/view_line_3"/>
            <View
                android:id="@+id/view_line_3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_2"
                app:layout_constraintBottom_toTopOf="@id/tv_tab_3"/>
            <TextView
                android:id="@+id/tv_tab_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/k_profile_tab_3"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_3"
                app:layout_constraintBottom_toTopOf="@id/view_line_4"/>

            <View
                android:id="@+id/view_line_4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_3"
                app:layout_constraintBottom_toTopOf="@id/tv_tab_4"/>

            <TextView
                android:id="@+id/tv_tab_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/k_logout"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/noto_sans_medium"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_4"
                app:layout_constraintBottom_toTopOf="@id/view_line_5"/>

            <View
                android:id="@+id/view_line_5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_4"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
